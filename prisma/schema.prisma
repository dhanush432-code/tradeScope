// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String           @id
  email          String           @unique
  display_name   String?
  avatar_url     String?
  provider       String?
  google_id      String?          @unique
  created_at     DateTime         @default(now())
  updated_at     DateTime         @updatedAt
  brokers        Broker[]
  tradingAccounts TradingAccount[]
  strategies     Strategy[]
  trades         Trade[]

  @@map("users")
}

model Broker {
  id            String     @id
  user_id       String
  broker_name   String
  api_key       String?
  api_secret    String?
  access_token  String?
  refresh_token String?
  is_active     Boolean    @default(true)
  last_synced_at DateTime? @db.Timestamp(3)
  created_at    DateTime   @default(now()) @db.Timestamp(3)
  updated_at    DateTime   @updatedAt @db.Timestamp(3)
  user          User       @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  tradingAccounts TradingAccount[]

  @@map("brokers")
}

model TradingAccount {
  id          String   @id
  user_id     String
  broker_id   String?
  account_name String
  account_type String?
  balance     Float    @default(0)
  currency    String   @default("USD")
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now()) @db.Timestamp(3)
  updated_at  DateTime @updatedAt @db.Timestamp(3)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  broker      Broker?  @relation(fields: [broker_id], references: [id], onUpdate: Cascade)
  trades      Trade[]

  @@map("trading_accounts")
}

model Strategy {
  id          String   @id
  user_id     String
  name        String
  description String?
  rules       String?
  is_active   Boolean  @default(true)
  created_at  DateTime @default(now()) @db.Timestamp(3)
  updated_at  DateTime @updatedAt @db.Timestamp(3)
  user        User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  trades      Trade[]

  @@map("strategies")
}

model Trade {
  id             String   @id
  user_id        String
  account_id     String?
  strategy_id    String?
  instrument     String
  asset_class    String?
  trade_type     String
  quantity       Float
  entry_price    Float
  exit_price     Float?
  stop_loss      Float?
  take_profit    Float?
  trade_date     DateTime @db.Timestamp(3)
  entry_date     DateTime? @db.Timestamp(3)
  exit_date      DateTime? @db.Timestamp(3)
  pnl            Float?
  pnl_percentage Float?
  pnl_currency   String   @default("USD")
  fees           Float    @default(0)
  status         String   @default("open")
  process        String?
  notes          String?
  tags           String?
  created_at     DateTime @default(now()) @db.Timestamp(3)
  updated_at     DateTime @updatedAt @db.Timestamp(3)
  user           User     @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: Cascade)
  account        TradingAccount? @relation(fields: [account_id], references: [id], onUpdate: Cascade)
  strategy       Strategy? @relation(fields: [strategy_id], references: [id], onUpdate: Cascade)

  @@map("trades")
}